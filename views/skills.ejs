<% layout("/layouts/boilerplate") %>

<section class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 py-16 px-6">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-extrabold text-center text-indigo-900 mb-12 tracking-tight">
      <span class="inline-block bg-white/60 backdrop-blur-md px-6 py-2 rounded-full shadow">
        Skills & Technologies
      </span>
    </h1>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% skills.forEach(skillObj => { %>
      <div
        class="group bg-white/60 backdrop-blur-xl border border-white/30 shadow-xl rounded-3xl p-6 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl">
        
        <div class="flex items-center justify-between mb-4">
          <h2 class="text-2xl font-semibold text-indigo-800 group-hover:text-indigo-900 transition">
            <%= skillObj.skill %>
          </h2>
          <span
            class="px-2.5 py-1 bg-indigo-100 text-indigo-700 text-xs font-semibold rounded-full tracking-wide shadow-sm">
            #<%= skillObj.tag %>
          </span>
        </div>

        <div class="h-0.5 bg-gradient-to-r from-indigo-300 to-blue-300 mb-4 rounded-full"></div>

        <div class="flex flex-wrap gap-2">
          <% skillObj.points.forEach(point => { %>
          <span
            class="inline-block px-3 py-1 text-sm bg-indigo-50 text-indigo-800 font-medium rounded-full border border-indigo-200 hover:bg-indigo-100 hover:scale-105 transition">
            <%= point %>
          </span>
          <% }) %>
        </div>

        <div
          class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-10 bg-gradient-to-r from-indigo-400 to-blue-500 blur-2xl transition duration-500">
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>

<style>
  body {
    font-family: 'Poppins', sans-serif;
  }

  section {
    position: relative;
    overflow: hidden;
  }

  section::before {
    content: "";
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 30%, rgba(95, 98, 227, 0.08), transparent 60%),
                radial-gradient(circle at 80% 70%, rgba(59, 130, 246, 0.1), transparent 60%);
    z-index: 0;
  }

  h1, .group {
    position: relative;
    z-index: 1;
  }
</style>
