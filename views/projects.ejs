<% layout("/layouts/boilerplate") %>

<section id="vanta-bg" class="min-h-screen bg-gradient-to-br from-indigo-50 via-blue-50 to-cyan-100 py-16 px-6">
  <div class="max-w-6xl mx-auto">
    <h1 class="text-4xl font-extrabold text-center text-indigo-900 mb-12 tracking-tight">
      <span class="inline-block bg-white backdrop-blur-md px-6 py-2 rounded-full shadow">
        Projects & Case Studies
      </span>
      <p class="line-x text-center text-indigo-600 mt-2">Some of the best things Iâ€™ve built</p>
      
    </h1>

    <% if (!projects || projects.length === 0) { %>
      <div class="text-center py-16">
        <p class="text-lg text-gray-600">No projects yet. Please add some from the admin panel.</p>
      </div>
    <% } else { %>
      <div class="grid md:grid-cols-2 gap-8">
        <% projects.forEach((project, index) => { %>
        <article
          class="project-card group relative bg-white backdrop-blur-xl border border-white/30 shadow-xl rounded-3xl p-6 transition-all duration-300 hover:-translate-y-2 hover:shadow-2xl overflow-hidden"
          aria-labelledby="proj-title-<%= index %>"
        >
          <div class="flex items-center justify-between mb-4">
            <h2 id="proj-title-<%= index %>" class="text-2xl font-semibold text-indigo-800 group-hover:text-indigo-900 transition">
              <%= project.name || 'Untitled Project' %>
            </h2>
            <span class="px-2.5 py-1 bg-indigo-100 text-indigo-700 text-xs font-semibold rounded-full tracking-wide shadow-sm">
              #<%= project.tag || 'n/a' %>
            </span>
          </div>

          <div class="h-0.5 bg-gradient-to-r from-indigo-300 to-blue-300 mb-4 rounded-full"></div>

          <div id="desc-<%= index %>" class="project-desc text-gray-700 text-sm md:text-base leading-relaxed" data-collapsed="true">
            <%- (project.description || '')
                .replace(/&lt;br\s*\/?&gt;/g, '<br>')
                .replace(/&amp;/g, '&')
                .replace(/&lt;\/?strong&gt;/g, (m) => m.replace(/&lt;/g, '<').replace(/&gt;/g, '>')) %>
          </div>

          <button
            type="button"
            data-index="<%= index %>"
            class="read-toggle mt-2 text-indigo-600 hover:text-indigo-800 font-medium text-sm focus:outline-none transition hidden"
            aria-expanded="false"
          >
            Read More â†“
          </button>

          <div class="flex flex-wrap gap-2 mt-5">
            <% (project.languages || []).forEach(lang => { %>
              <span class="inline-block px-3 py-1 text-sm bg-indigo-50 text-indigo-800 font-medium rounded-full border border-indigo-200 hover:bg-indigo-100 hover:scale-105 transition">
                <%= lang %>
              </span>
            <% }) %>
          </div>

     
          <div class="flex gap-3 mt-6">
            <% if (project.githubLink) { %>
              <a href="<%= project.githubLink %>" target="_blank"
                class="flex items-center gap-1 px-4 py-2 bg-white/80 border border-indigo-200 rounded-xl text-indigo-700 font-medium text-sm hover:bg-indigo-50 hover:-translate-y-0.5 transition">
                ðŸ”— GitHub
              </a>
            <% } %>
            <% if (project.runLink) { %>
              <a href="<%= project.runLink %>" target="_blank"
                class="flex items-center gap-1 px-4 py-2 bg-indigo-600 text-white rounded-xl font-medium text-sm hover:bg-indigo-700 hover:-translate-y-0.5 transition">
                ðŸš€ Live Demo
              </a>
            <% } %>
          </div>

         
          <div class="absolute inset-0 rounded-3xl opacity-0 group-hover:opacity-10 bg-gradient-to-r from-indigo-400 to-blue-500 blur-2xl transition duration-500 pointer-events-none"></div>
        </article>
        <% }) %>
      </div>
    <% } %>
  </div>
</section>



  <script src="https://cdnjs.cloudflare.com/ajax/libs/three.js/r134/three.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/vanta@latest/dist/vanta.net.min.js"></script>
<script>

    document.addEventListener("DOMContentLoaded", function () {
      VANTA.NET({
        el: "#vanta-bg",
        mouseControls: true,
        touchControls: true,
        gyroControls: false,
        minHeight: 200.0,
        minWidth: 200.0,
        scale: 1.0,
        scaleMobile: 1.0,
        color: 0x1c92d2,
        backgroundColor: 0x000000,
        points: 12.0,
        maxDistance: 20.0,
        spacing: 18.0,
      });
    });
</script>



<script>
document.addEventListener('DOMContentLoaded', () => {
  document.querySelectorAll('.project-desc').forEach((para, i) => {
    const computed = window.getComputedStyle(para);
    const lineHeight = parseFloat(computed.lineHeight) || parseFloat(computed.fontSize) * 1.4;
    const collapsedHeight = Math.round(lineHeight * 4);

    para.style.maxHeight = collapsedHeight + 'px';
    para.style.overflow = 'hidden';
    para.style.transition = 'max-height 350ms ease';

    const isOverflow = para.scrollHeight > collapsedHeight + 2;
    const btn = document.querySelector(`.read-toggle[data-index="${i}"]`);

    if (btn && isOverflow) {
      btn.classList.remove('hidden');
      btn.addEventListener('click', () => {
        const collapsed = para.getAttribute('data-collapsed') === 'true';
        if (collapsed) {
          para.style.maxHeight = para.scrollHeight + 'px';
          para.setAttribute('data-collapsed', 'false');
          btn.textContent = 'Read Less â†‘';
        } else {
          para.style.maxHeight = collapsedHeight + 'px';
          para.setAttribute('data-collapsed', 'true');
          btn.textContent = 'Read More â†“';
        }
      });
    }
  });
});
</script>

